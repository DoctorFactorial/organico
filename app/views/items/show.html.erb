<div class="container">
<div class="row">
  <div class="col-md-6">
    <%= image_tag @item.image.url(:original), class: "img-responsive" %>
  </div>
  <div class="col-md-6">
    <h3 class><%= @item.name %> - <%= @item.seller %> </h3>
    <p class="justify"><%= @item.description %> </p>
    <h4 class="text-right"><%= @item.price.to_f / 100 %>€</h4>

    <% if current_user %>
      <%= form_tag buy_path(slug: @item.slug) do %>
  	    <script
  		    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  		    data-key="<%= Rails.configuration.stripe[:publishable_key]%>"
  		    data-amount="<%= @item.price %>"
  		    data-name="Organico"
  		    data-description="<%= @item.name %>"
  		    data-email="<%= current_user.email %>">
  	    </script>
      <% end %>
    <% else %>
      <p>Por favor, primero regístrese para comprar</p>
    <% end %>
    </div>
  </div>
</div>
</div>
</div>
