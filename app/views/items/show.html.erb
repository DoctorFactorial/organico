<div class="row">
  <div class="col-md-6">
    <%= image_tag @item.image.url(:original), class: "img-responsive" %>
  </div>
  <div class="col-md-6">
    <h3><%= @item.name %> hecha por <%= @item.seller %> </h3>
    <p><%= @item.description %> </p>
    <h4 class="text-center"><%= @item.price.to_f / 100 %>€</h4>
  </div>
</div>

<%= link_to 'Mostrar', edit_item_path(@item) %> |
<%= link_to 'Atrás', items_path %>
