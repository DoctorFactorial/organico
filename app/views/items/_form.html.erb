<%= simple_form_for(@item, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :seller, required: true, label: false, placeholder: "Nombre del fabricante", input_html: {class: "form-control"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Descripción del Producto", input_html: {class: "form-control"} %>
    <%= f.input :price, required: true, label: false, placeholder: "Precio", input_html: {class: "form-control"} %>
    
    <%= f.input :image %>
    <%= f.input :resource %>
	<div class="checkbox text-center">
    <p>Disponibilidad</p>
    	<%= f.input :availability, required: false, label: false %>
	</div>

    <%if @item.id %>
        <%= f.button :submit, "Editar artículo", class: "btn btn-success btn-block" %>
    <% else %>
        <%= f.button :submit, "Crear artículo", class: "btn btn-success btn-block" %>
    <% end %>
<% end %>
